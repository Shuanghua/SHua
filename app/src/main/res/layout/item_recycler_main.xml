<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/item_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:text="@string/string_main_title"
            android:textColor="@color/md_green_400"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_main_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/item_main_title"
            android:layout_marginBottom="16dp"
            android:text="@string/string_main_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_main_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_main_content"
            android:text="@string/string_main_label"
            android:textColor="@color/md_green_500" />

        <TextView
            android:id="@+id/item_main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_main_content"
            android:text="@string/string_main_date"
            android:textColor="@color/md_grey_400" />
    </RelativeLayout>
</android.support.v7.widget.CardView>